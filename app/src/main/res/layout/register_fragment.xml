<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterFragment"
    android:padding="16dp">

    <!-- Register Title -->
    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register to ReviewR"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background">

            <!-- Username Input -->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- First Name Input -->
            <EditText
                android:id="@+id/firstNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Last Name Input -->
            <EditText
                android:id="@+id/lastNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Age Input -->
            <EditText
                android:id="@+id/ageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Upload Picture Button -->
            <Button
                android:id="@+id/uploadPictureButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload a Profile Picture ðŸ“· (Optional)"
                android:backgroundTint="#03A9F4"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:paddingVertical="12dp" />

            <!-- Profile Picture Preview -->
            <ImageView
                android:id="@+id/profilePicturePreview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Picture Preview"
                android:background="@drawable/rounded_input_background"
                android:visibility="gone" /> <!-- Hidden initially -->

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <!-- Register Button -->
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register ðŸ“"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    android:paddingVertical="12dp" />

                <!-- Go Back Button -->
                <Button
                    android:id="@+id/goBackButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go Back ðŸ”™"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Help Text -->
    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill all of the details above.\nNote: Uploading a profile picture is not mandatory."
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />
</androidx.constraintlayout.widget.ConstraintLayout>
