<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Personal Details âœï¸"
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/saveUserDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Personal Details ðŸ“¥"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <!-- Change Email Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Email âœï¸"
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Password (required for email change)"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/saveEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Email ðŸ“¥"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <!-- Change Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password âœï¸"
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/currentPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/savePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Password ðŸ“¥"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <!-- Edit Profile Picture Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile Picture âœï¸"
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/uploadProfilePictureButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload a New Profile Picture ðŸ“·"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/deleteProfilePictureButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Current Profile Picture ðŸ—‘ï¸"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <!-- Go Back Button -->
        <Button
            android:id="@+id/goBackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go Back ðŸ”™"
            android:textSize="18sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>